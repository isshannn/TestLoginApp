<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Heading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30sp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#fbe5fd</item>
    </style>

    <style name="EditTextLogin">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">#fbe5fd</item>
    </style>

    <style name="EditTextRegister">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ButtonViewRegister">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#E0F2F1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="DeleteUser">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#E0F2F1</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/delete_button</item>
    </style>

    <style name="TextViewProfile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ECEFF1</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="TextViewUserHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#E0F2F1</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>
    
    <style name="TextViewUserContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#DEFEEE</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>



</resources>